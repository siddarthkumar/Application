<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et1"
        android:background="@drawable/et1back"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="Password"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="30dp"
      />




    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/et1back"
        android:ems="10"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="Phone Number"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold|italic"
       android:layout_below="@+id/lbc"
        />




    <ImageView
        android:id="@+id/imgs"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"
        />

    <Button
        android:id="@+id/bt1"
        android:layout_width="163dp"
        android:layout_height="58dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/amarante"
        android:onClick="login"
        android:text="LOGIN"
        android:textColor="#ff8000"
        android:textSize="25dp"
        android:textStyle="bold|italic"
         android:layout_below="@+id/etc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/lbc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arbutus"
        android:text="Welcome to MORPHINE!"
        android:textColor="#ff8000"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/imgs"
        android:layout_marginTop="18dp"
      android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signup"
        android:fontFamily="@font/amarante"
        android:onClick="switchit"
        android:text="Not a Member?Sign Up!"
        android:textColor="#ff8000"
        android:textSize="30sp"
     android:layout_below="@+id/bt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
      />

</RelativeLayout>