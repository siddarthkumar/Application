<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:targetApi="lollipop"
        android:background="@color/design_default_color_primary_dark"
        >

        <TextView
            android:id="@+id/Dtitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="Dashboard"
            android:textColor="#fff"

            />
    </Toolbar>
    <RelativeLayout
        android:id="@+id/mainpart"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        >
        <ImageView
            android:id="@+id/icog"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/bulb"
            />
        <TextView
            android:id="@+id/wastetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:text="Please Choose your area"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_below="@+id/icog"
            />
        <Spinner
            android:id="@+id/spinnit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/wastetext"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/spinnit"
            android:layout_marginTop="50dp"
            android:background="@color/design_default_color_primary_dark"
            android:textAlignment="center"
            android:text="Next"
            android:textSize="25dp"
            android:textColor="#fff"
            android:textStyle="bold"
            />
    </RelativeLayout>

</RelativeLayout>